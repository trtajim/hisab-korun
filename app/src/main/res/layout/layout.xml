<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/main_layout"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        >

    <TextView
        android:id="@+id/circle_txt_lay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_colored"
        android:layout_centerVertical="true"
        android:text="T"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        />

        <TextView
            android:id="@+id/name_txt_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tajim"
            android:layout_toRightOf="@+id/circle_txt_lay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:translationY="-8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/paona_txt"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="পাওনা"
            android:layout_toRightOf="@+id/circle_txt_lay"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            android:translationY="12dp"
            android:textSize="12dp"
            android:textColor="#097F0E"/>

        <TextView
            android:id="@+id/dena_txt"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="দেনা"
            android:layout_toRightOf="@+id/circle_txt_lay"
            android:layout_marginLeft="23dp"
            android:layout_centerVertical="true"
            android:translationY="12dp"
            android:textSize="12dp"
            android:fontFamily="@font/ballo"
            android:textColor="#BC0404"/>


        <TextView
            android:id="@+id/money_txt_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0৳"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/ballo"
            android:translationY="5dp"

            android:translationX="-50dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_read_more_24"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:translationX="-10dp"
            android:translationY="5dp"/>






    </RelativeLayout>





</RelativeLayout>