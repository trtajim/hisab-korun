<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DnavHelper"
    android:background="#fff"

    >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_dnav"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        android:background="@drawable/bottom_shade"
        app:title=" "
        >


        <TextView
            android:id="@+id/name_dnav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product List"
            android:layout_toRightOf="@+id/circle_txt_dtl"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:translationX="-15dp"
            android:fontFamily="@font/ballo"
            android:textStyle="bold"/>




    </androidx.appcompat.widget.Toolbar>


    <FrameLayout
        android:id="@+id/frame_dnav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_dnav"/>




</RelativeLayout>