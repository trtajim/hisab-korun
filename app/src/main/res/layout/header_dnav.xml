<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"

    >


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView_dnav"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/circle"
        android:layout_marginLeft="10dp"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/circle_txt_dnav"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_colored"
        android:text="A"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        />





    <TextView
        android:id="@+id/txt_dnav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name "
        android:layout_below="@+id/circle_txt_dnav"
        android:fontFamily="@font/ballo"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>








    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txt_dnav"
        android:layout_marginTop="10dp"
        android:translationY="-5dp"
        android:background="#000"/>




</RelativeLayout>