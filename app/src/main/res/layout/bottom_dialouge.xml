<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_curved"
    android:padding="10dp"

    >

    <TextView
        android:id="@+id/op1_bd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="পাসওয়ার্ড দিন : "
        android:textSize="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/ballo"

        />


    <EditText
        android:layout_below="@+id/op1_bd"
        android:id="@+id/ed_bd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="পাসওয়ার্ড"
        android:paddingLeft="20dp"
        android:layout_marginLeft="30dp"
        android:inputType="numberPassword"
        android:layout_centerHorizontal="true"
        android:background="@drawable/curved"
        android:layout_marginTop="15dp"

        />

    <Button
        android:id="@+id/btn_bd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="নিশ্চিত"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/ed_bd"
        android:backgroundTint="@color/theme"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />





</RelativeLayout>